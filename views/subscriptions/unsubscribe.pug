extends ../layout/main

block globalVars
  - var metaTitle = 'Release Notes - Unsubscribe'

block content
  .hero.is-primary
    .hero-body
      .container.has-text-centered
        h2.subtitle.is-3 Unsubscribe from @#{scope}/#{releaseNotesModel.name}

  .section
    .container.has-text-centered
      if !subscriptions || subscriptions.length < 1
        .message
          .message-body
            p
              | You are currently not subscribed to @#{scope}/#{releaseNotesModel.name}.
              | &nbsp;
              a(href=`/@${scope}/${releaseNotesModel.name}/subscribe`) Subscribe now
      else
        form(method='post' enctype='multipart/form-data' action=`/@${scope}/${releaseNotesModel.name}/unsubscribe`)
          .field.is-grouped-centered
              button.button.is-primary(type="submit")
                | Unsubscribe from updates

