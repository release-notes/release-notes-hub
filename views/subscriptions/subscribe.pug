extends ../layout/main

block globalVars
  - var metaTitle = `Release Notes - Subscribe to @${scope}/${releaseNotesModel.name}`

block content
  .hero.is-primary
    .hero-body
      .container.has-text-centered
        h2.subtitle.is-3 Subscribe to @#{scope}/#{releaseNotesModel.name}

  .section
    .container.has-text-centered
      if subscriptions && subscriptions.length
        .message
          .message-body
            p
              | You are already subscribed to @#{scope}/#{releaseNotesModel.name}.
              | &nbsp;
              a(href="/subscriptions") Manage subscriptions

      form(method='post' enctype='multipart/form-data' action=`/@${scope}/${releaseNotesModel.name}/subscribe`)
        .field.is-grouped-centered
            button.button.is-primary(type="submit")
              | Subscribe for updates

