extends ../layout/main

block globalVars
  - var pageCls = 'home-page'

block content
  .hero.is-primary
    .hero-body
      .container.has-text-centered
        h2.title.is-2 Release Notes as a Service
        h3.subtitle.is-4(style='width:100%').
          Hosted changelog pages and release announcements<br>for open source projects

  .hero
    .hero-body
      .container.has-text-centered
        h3.subtitle.is-3 About
        h5.subtitle.is-5 Publish your <code>CHANGELOG.md</code> or <code>release-notes.yml</code> files to the hub.
        h5.subtitle.is-5 Broadcast software updates and release announcements to your community.
        br
        .buttons.is-centered
          a.button.is-secondary.is-medium(href='/about') Read More
          a.button.is-primary.is-medium(href='/publish') Publish Release Notes
  .hero
    .hero-body
      .container.has-text-centered
        h3.subtitle.is-3 Features

        .columns.is-grid.is-multiline.features
          .column.is-one-third-tablet
            i.mdi.mdi-36 !{mdi('verified')}
            h4.subtitle.is-4 YAML Schema Spec
            p.
              Build on top of the open <a href="https://github.com/release-notes/release-notes-spec">release notes specification</a>,
              an easy to use, human readable and machine processable schema for release notes.
          .column.is-one-third-tablet
            i.mdi.mdi-36 !{mdi('autorenew')}
            h4.subtitle.is-4 Automation
            p Integrate release notes in your CI/CD pipeline
            a(href='/api') Read API Docs
          .column.is-one-third-tablet
            i.mdi.mdi-36 !{mdi('copyright')}
            h4.subtitle.is-4 Open Source
            p Release Notes is build for the community, with the community:&nbsp;
              a(href='/mit-license') MIT licensed
          .column.is-one-third-tablet
            i.mdi.mdi-36 !{mdi('access-point-network')}
            h4.subtitle.is-4 Realtime
            p Subscribe on release notes and receive fine grained notifications in realtime
          .column.is-one-third-tabletist_bulleted
            i.mdi.mdi-36 !{mdi('format-list-bulleted')}
            h4.subtitle.is-4 Transparency
            p Let your customers and/or dependents know what's in your release
          .column.is-one-third-tablet
            i.mdi.mdi-36 !{mdi('currency-usd-off')}
            h4.subtitle.is-4 Free of Charge
            p Free for open source projects

  .hero
    .hero-body.has-text-centered
      .container
        a.button.is-primary.is-medium(href='/@release-notes/release-notes-hub') Subscribe for updates

  if newest && newest.length
    .hero
      .hero-body
        .container.has-text-centered
          h3.subtitle.is-3 Latest Release Notes

          .columns.is-grid.is-multiline
            each releaseNotes in newest
              .column.is-one-third-tablet.has-text-left
                a(href=`/@${releaseNotes.scope}/${releaseNotes.name}`)
                  | #{releaseNotes.name}
                div.is-small #{releaseNotes.title}
                div.is-small by&nbsp;
                  a(href=`/@${releaseNotes.scope}`) @#{releaseNotes.scope}
